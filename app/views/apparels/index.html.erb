<p id="notice"><%= notice %></p>

<h1>Apparels</h1>
<%=form_tag apparels_path, :method => :get do %>
  <%- @all_sizes.each do |size| %>
    <%= size %>
    <%= check_box_tag "size[]",size %>
    <% end %>
<%= submit_tag 'Filter' %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Apparel</th>
      <th>Sex</th>
      <th>Article</th>
      <th>Size</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apparels.each do |apparel| %>
      <tr>
        <td><%= apparel.apparel_id %></td>
        <td><%= apparel.sex %></td>
        <td><%= apparel.article %></td>
        <td><%= apparel.size %></td>
        <td><%= apparel.notes %></td>
        <td><%= link_to 'Show', apparel %></td>
        <td><%= link_to 'Edit', edit_apparel_path(apparel) %></td>
        <td><%= link_to 'Destroy', apparel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Apparel', new_apparel_path %>
