<p id="notice"><%= notice %></p>

<h1>Rentals</h1>
<br>Active users: <%=link_to @numActive, rentals_viewActive_path %><br><br>
<table>
  <thead>
    <tr>
      <th>Rental</th>
      <th>Apparel ID</th>
      <th>Checkout date</th>
      <th>Expected return date</th>
      <th>Actual return date</th>
      <th>Student UIN</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rentals.each do |rental| %>
      <tr>
        <td><%= rental.rental_id %></td>
        <td><%= rental.apparel.apparel_id %></td>
        <td><%= rental.checkout_date %></td>
        <td><%= rental.expected_return_date %></td>
        <td><%= rental.actual_return_date %></td>
        <td><%= rental.student.uin %></td>
        <td><%= link_to 'Show', rental %></td>
        <td><%= link_to 'Edit', edit_rental_path(rental) %></td>
        <td><%= link_to 'Destroy', rental, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Rental', new_rental_path %>
